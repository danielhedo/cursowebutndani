<head>
    <link rel="stylesheet" href="../../public/stylesheets/style.css">
</head>
<!-- Fila bienvenido-->
<div class="logout">
    <p class="bienvenido negro">Bienvenid@, {{persona}}.</p>
    <a href="/admin/login/logout" class="salida negro">Cerrar sesión <i class="fas fa-right-from-bracket" class="negro"></i></a>
</div>
<!--Fin fila-->
<div class="contentText" style="padding: 3%; padding-right: 5%;">
    <div class="display-btn-post">
        <h2 style="margin-right: 10px;">Agregar entrada</h2>
    </div>
</div>
<div class="container generalbackend">
    <form action="/admin/blog/nuevo" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="form-group">
                <label for="titulo">Título</label>
                <input type="text" class="form-control" id="titulo" name="titulo">
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label for="subtitulo">Subtítulo</label>
                <input type="text" class="form-control" id="subtitulo" name="subtitulo">
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label for="form-body">Cuerpo</label>
                <textarea type="text" class="form-control" id="form-body" rows="5" name="cuerpo"></textarea>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label for="url_imagen">URL de imagen</label>
                <div class="input-group mb-3">                    
                    <input type="text" class="form-control" id="url_imagen" name="url_imagen">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label for="imagen_cloudinary">URL Cloudinary</label>
                <div class="input-group mb-3">                    
                    <input type="file" class="form-control" id="imagen_cloudinary" name="imagen_cloudinary">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="fecha_alta">Fecha</label>
                <input type="date" class="form-control" id="fec_alta" name="fec_alta">
            </div>
            <div class="form-group col-md-6">
                <label for="usuario_alta">Usuario de alta</label>
                <input type="text" class="form-control disabled-input" id="usuario_alta" name="usuario_alta" value="{{persona}}" readonly>
            </div>
        </div>
        <div class="form-group" style="margin-top: 3%; margin-bottom: 5%;">
            <button type="submit" class="btn btn-success">Enviar</button>
        </div>
    </form>
    {{#if error}}
    <p>{{message}}</p>
    {{/if}}
</div>