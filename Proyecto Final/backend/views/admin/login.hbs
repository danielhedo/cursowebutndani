<!-- Fila bienvenido-->
<div class="logout">
    <p class="bienvenido negro">Bienvenid@ anónimo.</p>    
</div>
<!--Fin fila-->
<div className="contentText" style="padding: 3%; padding-right: 5%;">
<section class="vh-70">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form action="/admin/login" method="post">
          <!-- Usuario input -->    
          <div class="form-outline mb-4">
            <input type="text" id="inputUser" class="form-control form-control-lg"
              placeholder="Usuario" name="usuario" />
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            <input type="password" id="inputPassword" class="form-control form-control-lg"
              placeholder="Contraseña" name="password" />
          </div>

          <div class="d-flex justify-content-between align-items-center">
          <div class="text-center text-lg-start mt-4 pt-2" style="padding-bottom: 15%;">
            <button type="submit" class="btn btn-primary btn-lg"
              style="padding-left: 2.5rem; padding-right: 2.5rem;">Entrar</button>            
          </div>
        </form>
        {{#if error}}
            <p>Usuario o contraseña incorrecta</p>
        {{/if}}

      </div>
    </div>
  </div>  
</section>
</div>