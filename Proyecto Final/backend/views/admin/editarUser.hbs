<head>
    <link rel="stylesheet" href="../../public/stylesheets/style.css">
</head>
<!-- Fila bienvenido-->
<div class="logout">
    <p class="bienvenido negro">Bienvenid@, {{persona}}.</p>
    <a href="/admin/login/logout" class="salida negro">Cerrar sesión <i class="fas fa-right-from-bracket"
            class="negro"></i></a>
</div>
<!--Fin fila-->
<div class="contentText" style="padding: 3%; padding-right: 5%;">
    <div class="display-btn-post">
        <h2 style="margin-right: 10px;">Editar usuario</h2>
    </div>
</div>
<div class="container generalbackend">
    <form action="/admin/usuarios/editarUser" method="post">
        <input type="hidden" value="{{usuario.id}}" name="id">
        <input type="hidden" value="{{esMismoUser}}" name="esMismoUser">
        <div class="row">
            <div class="form-group col-md-3">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control disabled-input" id="usuario" name="usuario"
                    value="{{usuario.usuario}}" readonly>
            </div>
            {{#if esMismoUser }}
            <div class="form-group col-md-3">
                <label for="password">Nueva Contraseña</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <div class="form-group col-md-3">
                <label for="password">Confirmar contraseña</label>
                <input type="password" class="form-control" id="password2" name="password2">
            </div>
            {{/if}}
            <div class="form-group col-md-3">
                <label for="tipoUsuario">Tipo de usuario</label>
                <select class="form-control" id="cod_tipo_usuario" name="cod_tipo_usuario">
                    {{#each tiposUsuario}}
                    <option value="{{this.cod_tipo_usuario}}" {{#if this.selected}}selected="selected"{{/if}} >{{this.des_tipo_usuario}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div class="form-group col-md-2 espaciado-enviar">
            <button type="submit" class="btn btn-success">Enviar</button>
        </div>
        {{#if error}}
        <div class="form-group espaciado-enviar">
            <p class="msg-error">{{message}}</p>
        </div>
        {{/if}}
</div>
</form>

</div>